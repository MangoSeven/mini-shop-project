page {
  background:#f5f5f5;
}
.classify {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding:0px 10px;
}
.title {
  padding:0px 10px;
  height: 50px;
  line-height: 50px;
  background:rgb(255,129,37);
}
.classify view {
  width:43%;
  padding:5px 10px; 
  background: #fff;
  margin-top:10px;
  border-radius:8px;
  overflow:hidden;
}
.classify image {
  width:100%;
  height: 100px;
}