page {
  background: #e5e5e5;
  padding-bottom: 10px;
}
swiper {
  background: #fff;
  padding-bottom: 10px;
  border-bottom: 2px #f5f5f5 solid;
}
swiper-item {
  display: flex;
  justify-content: center;
}
.slide-image {
  width: 90%;
  height: 100%;
}
.classify {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  overflow-x: scroll;
  box-sizing: border-box;
  padding: 15px 15px;
  white-space: nowrap;
}
.classify view {
  padding: 0px 8px;
  background: rgb(254, 220, 33);
  border-radius: 18px;
  margin: 0px 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  display: inline-block;
  font-size: 14px;
  height: 28px;
  line-height: 28px;
}
.title {
  height: 50px;
  background: rgb(255, 129, 37);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0px 15px;
  margin-top: 5px;
}
.showPic {
  display: flex;
  flex-wrap: wrap;
  padding: 0px 10px;
  justify-content: space-between;
}

.showPic .picBox {
  width: 48%;
  /* height:175px; */
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #fff;
  border-radius: 5px;
  overflow: hidden;
}
.picBox image {
  width: 100%;
  height: 150px;
}
.picBox .introduce {
  padding: 10px 5px;
  color:black;
  font-size:14px;
}
.bottomLine {
  text-align: center;
  margin-top: 10px;
  font-size: 12px;
  color: #ccc;
}
